# /etc/nginx/sites-available/default

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    server_name http://alb-nginx-1883148385.ap-northeast-1.elb.amazonaws.com;  # Thay your_domain.com bằng tên miền của bạn

    location /node {
        # Cấu hình reverse proxy cho đường dẫn /node
        proxy_pass http://alb-nodejs-1927647279.ap-northeast-1.elb.amazon.com/;  # Thay backend_server bằng địa chỉ server backend của bạn
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Thời gian timeout (tùy chọn)
        #proxy_read_timeout 90;
    }

    location / {
        # Trả về file index.html cho tất cả các yêu cầu khác
        root /var/www/html;  # Thay bằng đường dẫn thực tế đến thư mục chứa file index.html
        index index.html;
        try_files $uri $uri/ =404;  # Nếu không tìm thấy, sẽ trả về index.html
    }
}

