# /etc/nginx/sites-available/default

server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    server_name $host;  # Thay your_domain.com bằng tên miền của bạn

    location /node {
        # Cấu hình reverse proxy cho đường dẫn /node
        proxy_pass http://54.238.202.219:80;  # Thay backend_server bằng địa chỉ server backend của bạn
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

    }

    location /node1 {
        # Trả về file index.html cho tất cả các yêu cầu khác
        root /var/www/html;  # Thay bằng đường dẫn thực tế đến thư mục chứa file index.html
        index index.html;
        try_files $uri $uri/ =404;  # Nếu không tìm thấy, sẽ trả về index.html
    }
}

server {
        listen 85;
        listen [::]:85;

        server_name http://54.238.202.219:80;

        root /var/www/example.com;
        index index.html;

        location / {
                try_files $uri $uri/ =404;
        }
}
